<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp">


    <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/rule_maohao"
            android:text=":"
            android:textSize="40sp"
            android:clickable="true"
            android:textColor="#486a00"
            android:layout_centerInParent="true"

            />
    <TextView android:layout_width="370dp"
              android:id="@+id/rule_ops"
              android:textSize="30sp"
              android:textColor="#486a00"
              android:gravity="center"
              android:layout_alignTop="@id/rule_maohao"
              android:layout_toRightOf="@id/rule_maohao"
              android:layout_height="100dp"/>

    <TextView android:layout_width="370dp"
              android:textSize="30sp"
              android:gravity="center"
              android:id="@+id/ops_name"
              android:layout_alignTop="@id/rule_maohao"
              android:layout_toLeftOf="@id/rule_maohao"
              android:textColor="#486a00"
              android:layout_height="100dp"/>
</RelativeLayout>