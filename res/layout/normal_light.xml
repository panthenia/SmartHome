<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root_level"
                android:background="@drawable/rect_back"
                android:layout_width="fill_parent"
                android:layout_height="276px">
    <ImageView
            android:src="@drawable/btn_cop_lights_off"
            android:id="@+id/block_icon"

            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30px"
            android:layout_width="125px"
            android:layout_height="125px"/>
    <ToggleButton
            android:id="@+id/light_toogle"
            android:textColor="#486a00"
            android:layout_below="@id/block_icon"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="一号灯"
            android:textSize="26sp"
            android:textColor="#486a00"
            android:layout_marginTop="20dp"
            android:id="@+id/block_text"
            android:layout_below="@id/light_toogle"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>