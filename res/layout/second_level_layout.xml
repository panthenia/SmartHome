<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/config_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <GridView
            android:id="@+id/content_grid"
            android:numColumns="3"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="870px"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="205dp"

            android:horizontalSpacing="60px"
            android:verticalSpacing="40dp"
            android:scrollbars="none"
            android:layout_height="620px">

            </GridView>

    <RelativeLayout
            android:background="@drawable/input_back"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="60px">

        <TextView
                android:id="@+id/acitivity_name"
                android:textSize="30sp"
                android:textColor="#486a00"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <RelativeLayout
                android:id="@+id/room_selector"
                android:onClick="onRoomSelectorClicked"
                android:layout_centerVertical="true"
                android:layout_marginLeft="950dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            <ImageView
                    android:src="@drawable/home"
                    android:layout_centerVertical="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            <TextView
                    android:id="@+id/room_name"
                    android:textSize="30sp"
                    android:text="902"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:textColor="#486a00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>